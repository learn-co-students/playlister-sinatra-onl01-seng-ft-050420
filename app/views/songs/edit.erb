<h1>Edit <%= @song.name %></h1>

<form method="POST" action="/songs/<%= @song.slug %>">
  <input type="hidden" name="_method" value="PATCH">


  <input type="text" name="song[name]" id="Name" value="<%= @song.name %>">


  <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">

  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>

  <input type="submit" value="Save">
</form>