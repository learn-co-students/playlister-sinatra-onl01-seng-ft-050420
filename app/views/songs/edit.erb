<h1>Edit A New Song </h1>

<form action="/songs/<%= @song.slug%>" method="POST">
    <input id="hidden=" type="hidden" name="_method" value="PATCH"> </br>
    <label for="artist_name">Artist Name</label>    
    <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"> </br>    
   
    

    <label for="name">Song's Name</label>
    <input type="text" name="song[name]" id="Name" value="<%=@song.name%>"> </br>


    <label> Genres </label>
    <% Genre.all.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"  <%='checked' if @song.genres.include?(genre) %>  >
    <% end %>
    
  
    <input type="submit" value="Save">
</form>