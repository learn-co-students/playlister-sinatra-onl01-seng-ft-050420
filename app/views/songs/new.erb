<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label for="song_name">Name </label>

  <br>

  <input type="text" name="song[name]" id="song_name">

  <p>Select an existing genre or create a new one below.</p>

  <h3>Existing Genres</h3>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="genre[name]" id="<%= genre.id %>" value="<%= genre.id %>"><%= genre.name %><br>
  <% end %>
  <br>

  <h3>New Genre</h3>
  <label for="genre[name]">Genre Name </label>
  <br>
  <input type="text" name="genre[name]" id="genre_name" />
  <br><br>

  <p>Select an existing artist or create a new one below.</p>

  <h3>Existing Artists</h3>
  <% @artists.each do |artist| %>
    <input type="radio" name="artist[name]" id="<%= artist.id %>" value="<%= artist.id %>"><%= artist.name %><br>
  <% end %>
  <br>

  <h3>New Artist</h3>
  <label for="artist[name]">Artist Name </label>
  <br>
  <input type="text" name="artist[name]" id="artist_name" />
  <br><br>


  <input type="submit" value="Create Song">
</form>